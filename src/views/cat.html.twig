{% extends 'base.html.twig' %}

{% block title %}{{ category[0].cats  }}{% if curr_page > 1 %}. Page {{curr_page}} {% endif %}{% endblock %}

{% block body %}

	<h3> {{ category[0].cats }} </h3>

{% for a in category %}

	
		<div class="pure-g">
			<div class="pure-u-1 setborder margintop15 padding10">
				<div class="pure-g">
					<div class="pure-u-1 pure-u-sm-2-5 pure-u-md-1-5">
						<a href="/{{a.id}}/{{a.name|trim|replace({" ":"-", ".":"", "/":"","+":""})}}"><img alt="{{a.name}}" class="vertical-align listimage" src="{% if a.image|length > 0 %} /img/books_covers/{{a.image}}.jpg {% else %} /img/noimage.jpg {% endif %}" /></a>
					</div>
					<div class="pure-u-1 pure-u-sm-3-5 pure-u-md-4-5">
						<strong><a href="/{{a.id}}/{{a.name|trim|replace({" ":"-", ".":"", "/":"","+":""})}}">{{a.name}}</a></strong>
						<p>{{ a.description|length > 300 ? a.description|slice(0, 300) ~ '...' : a.description }}</p>
					</div>
				</div>
			</div>
		</div>
	

{% endfor %}

{% if next_page == true %}
<div class="pure-g">
	<div class="pure-u-1 setborder margintop15 padding10">
		{% set next_page = curr_page + 1 %}
		<a href="/category/{{cat_id}}/{{next_page}}">Next</a>
	</div>
</div>
{% endif %}

{% endblock %}