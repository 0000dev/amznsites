{% extends 'base.html.twig' %}

{% block body %}

	<h3> List of Venues. Page {{page}} </h3>

{% for v in venues %}

	
		<div class="pure-g">
			<div class="pure-u-1 setborder margintop15 padding10">
				<div class="pure-g">
					<div class="pure-u-1 pure-u-sm-2-5 pure-u-md-1-5">
						<a href="/venue/{{v.id}}/{{v.name|trim|replace({" ":"-", ".":""})}}"><img class="vertical-align" src="{% if v.image_small|length > 0 %} {{v.image_small}} {% else %} /img/noimage.jpg {% endif %}" width="95%" /></a>
					</div>
					<div class="pure-u-1 pure-u-sm-3-5 pure-u-md-4-5">
						<strong><a href="/venue/{{v.id}}/{{v.name|trim|replace({" ":"-", ".":""})}}">{{v.name}}</a></strong>
						<p>{{ v.address}}</p>
					</div>
				</div>
			</div>
		</div>
	

{% endfor %}

{% if next_page == true %}
<div class="pure-g">
	<div class="pure-u-1 setborder margintop15 padding10">
		{% set next_page = curr_page + 1 %}
		<a href="/venues/{{next_page}}">Next</a>
	</div>
</div>
{% endif %}

{% endblock %}