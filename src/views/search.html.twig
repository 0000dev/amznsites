{% extends 'base.html.twig' %}

{% block title %}Search{% endblock %}

{% block body %}

{% if content|length > 0 %}

	<h3> Looking for "{{ search_phrase }}" </h3>

	{% for s in content %}

			<div class="pure-g">
				<div class="pure-u-1 setborder margintop15 padding10">
					<div class="pure-g">
						<div class="pure-u-1 pure-u-sm-2-5 pure-u-md-1-5">
							<a href="/{{s.id}}/{{s.name|trim|replace({" ":"-", ".":"", "/":"","+":""})}}"><img alt="{{s.name}}" class="vertical-align listimage" src="{% if s.image|length > 0 %} /img/books_covers/{{s.image}}.jpg {% else %} /img/noimage.jpg {% endif %}" /></a>
						</div>
						<div class="pure-u-1 pure-u-sm-3-5 pure-u-md-4-5">
							<strong><a href="/{{s.id}}/{{s.name|trim|replace({" ":"-", ".":"", "/":"","+":""})}}">{{s.name}}</a></strong>
							<p>{{ s.description|length > 300 ? s.description|slice(0, 300) ~ '...' : s.description }}</p>
						</div>
					</div>
				</div>
			</div>
		

	{% endfor %}

{% else %}

	<h3> Nothing found </h3>

{% endif %}

